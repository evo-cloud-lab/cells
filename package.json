{
    "name": "cells",
    "description": "VM/Container based cluster manager",
    "version": "0.0.1",
    "author": "Yisui Hu <easeway@gmail.com>",
    "scripts": {
        "test": "mocha --reporter spec test/*-test.js",
        "cov": "mocha -r blanket -R html-cov test/*-unit-test.js >_coverage.html"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/evo-cloud/cells"
    },
    "main": "./index.js",
    "bin": {
        "cells-server": "./server.js"
    },
    "dependencies": {
        "js-class":   "0.0.2",
        "js-flow":    "0.0.1",
        "js-plugins": "0.0.2",
        "evo-elements": "git://github.com/evo-cloud/elements",
        "netmask": "1.0.4",
        "idgen": "1.3.0",
        "express": "3.4.8"
    },
    "devDependencies": {
        "mocha": "1.17.1",
        "sandboxed-module": "0.3.0",
        "blanket": "1.1.6"
    },
    "engines": {
        "node": ">=0.10",
        "npm": "1"
    },
    "licenses": [
        {
            "type": "MIT",
            "url": "https://github.com/evo-cloud/cells/raw/master/LICENSE"
        }
    ],
    "extensions": {
        "cells:network.adapter": {
            "bridge": "./lib/net-adapter-bridge"
        },
        "cells:network.service.dhcp": {
            "dnsmasq": {
                "module": "./lib/net-service-dnsmasq",
                "object": "dhcp"
            }
        },
        "cells:network.service.dns": {
            "dnsmasq": {
                "module": "./lib/net-service-dnsmasq",
                "object": "dns"
            }
        },
        "cells:network.service.gateway": {
            "dnsmasq": {
                "module": "./lib/net-service-dnsmasq",
                "object": "gateway"
            }
        },
        "cells:network.service.nat": {
            "iptables": {
                "module": "./lib/net-service-iptables",
                "object": "nat"
            }
        },
        "cells:container": {
            "ext": "./lib/container-ext"
        }
    },
    "config": {
        "blanket": {
            "onlyCwd": true,
            "pattern": "//^((?!node_modules).)*/lib/.+$/"
        }
    }
}
